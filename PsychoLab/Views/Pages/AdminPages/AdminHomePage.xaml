<Page x:Class="PsychoLab.Views.Pages.AdminPages.AdminHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PsychoLab.Views.Pages.AdminPages"
      mc:Ignorable="d" 
      FontSize="15"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Администратор">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Grid.Row="0">
            <Label Content="Admin"
                   ContentStringFormat="Вы авторизованы: {0}"
                   FontWeight="Bold"/>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <Button Content="Управление пользователями"
                    Width="250"
                    Height="50"/>

            <Button Content="Управление клиентами"
                    Width="250"
                    Height="50"
                    Margin="0,5"/>

        </StackPanel>
    </Grid>
</Page>
